<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="0"
        android:textAlignment="textEnd" />


    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/prompt"/>



        <Button
            android:id="@+id/btnC"
            style="@style/btn"
            android:text="←"
            android:textColor="@color/red"
            android:layout_below="@+id/prompt"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_toRightOf="@id/btnC"
            style="@style/btn"
            android:text="/"
            android:textColor="@color/red"
            android:layout_below="@+id/prompt"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btnMul"
            android:layout_toRightOf="@id/btnDiv"
            style="@style/btn"
            android:text="x"
            android:textColor="@color/red"
            android:layout_below="@+id/prompt"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btnCE"
            android:layout_toRightOf="@id/btnMul"
            style="@style/btn"
            android:text="C"
            android:textColor="@color/red"
            android:layout_below="@+id/prompt"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn7"
            android:layout_below="@id/btnC"
            style="@style/btn"
            android:text="7"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn8"
            android:layout_below="@id/btnC"
            android:layout_toRightOf="@id/btn7"
            style="@style/btn"
            android:text="8"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn9"
            android:layout_below="@id/btnC"
            android:layout_toRightOf="@id/btn8"
            style="@style/btn"
            android:text="9"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btnMen"
            android:layout_below="@id/btnC"
            android:layout_toRightOf="@id/btn9"
            style="@style/btn"
            android:text="-"
            android:textColor="@color/red"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn4"
            android:layout_below="@id/btn7"
            style="@style/btn"
            android:text="4"
            android:onClick="OnClickBtn"/>

        <Button
            android:id="@+id/btn5"
            style="@style/btn"
            android:layout_below="@id/btn7"
            android:layout_toRightOf="@id/btn4"
            android:text="5"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn6"
            style="@style/btn"
            android:layout_below="@id/btn7"
            android:layout_toRightOf="@id/btn5"
            android:text="6"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btnMas"
            style="@style/btn"
            android:layout_below="@id/btn7"
            android:layout_toRightOf="@id/btn6"
            android:text="+"
            android:textColor="@color/red"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn1"
            style="@style/btn"
            android:layout_below="@id/btn4"
            android:text="1"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn2"
            style="@style/btn"
            android:layout_below="@id/btn4"
            android:layout_toRightOf="@id/btn1"
            android:text="2"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn3"
            style="@style/btn"
            android:layout_below="@id/btn4"
            android:layout_toRightOf="@id/btn2"
            android:text="3"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btn0"
            style="@style/btn"
            android:layout_below="@id/btn1"
            android:layout_width="190sp"
            android:text="0"
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btnPunto"
            style="@style/btn"
            android:layout_below="@id/btn1"
            android:layout_toRightOf="@+id/btn0"
            android:text="."
            android:onClick="OnClickBtn"/>
        <Button
            android:id="@+id/btnIgual"
            style="@style/btn"
            android:layout_below="@id/btnMas"
            android:layout_toRightOf="@+id/btn3"
            android:layout_height="130sp"
            android:text="="
            android:textColor="@color/red"
            android:onClick="OnClickBtn"/>

    </RelativeLayout>
