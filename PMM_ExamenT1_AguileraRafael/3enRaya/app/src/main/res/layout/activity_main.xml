<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    
    >

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tres en Raya"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="30sp"

        />
    <GridLayout
        android:id="@+id/tablero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="20sp"
        >
        <ImageButton
            android:id="@+id/btn00"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_column="0"
            android:layout_row="0"
            />
        <ImageButton
            android:id="@+id/btn10"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="1"
            android:layout_row="0"
            />
        <ImageButton
            android:id="@+id/btn20"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="2"
            android:layout_row="0"
            />
        <ImageButton
            android:id="@+id/btn01"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="0"
            android:layout_row="1"
            />
        <ImageButton
            android:id="@+id/btn11"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="1"
            android:layout_row="1"
            />
        <ImageButton
            android:id="@+id/btn21"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="2"
            android:layout_row="1"
            />
        <ImageButton
            android:id="@+id/btn02"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="0"
            android:layout_row="2"
            />
        <ImageButton
            android:id="@+id/btn12"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="1"
            android:layout_row="2"
            />
        <ImageButton
            android:id="@+id/btn22"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/titulo"
            android:layout_column="2"
            android:layout_row="2"
            />
    </GridLayout>
    
    <View
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/Gris"
        android:layout_below="@+id/tablero"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        />
    <RadioGroup
        android:id="@+id/modoJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separador"
        android:layout_alignLeft="@+id/tablero"
        >

        <RadioButton
            android:id="@+id/modoFacilRB"
            android:text="Tranquilito, Â¿eh?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/modoDificilRB"
            android:text="Me gustan los retos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <ToggleButton
        android:id="@+id/startbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Stop"
        android:textOff="Start"
        android:layout_below="@id/separador"
        android:layout_alignRight="@+id/tablero"/>

    <LinearLayout
        android:id="@+id/turnoJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startbtn"
        android:layout_alignLeft="@id/startbtn"
        android:layout_alignRight="@id/startbtn"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:visibility="invisible"
        >
    <ImageView
        android:src="@drawable/usericon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

        <TextView
            android:text="Tu turno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/turnoAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startbtn"
        android:layout_alignLeft="@id/startbtn"
        android:layout_alignRight="@id/startbtn"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:visibility="invisible"
        >
        <ImageView
            android:src="@drawable/androidicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="Android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />

    </LinearLayout>


</RelativeLayout>